        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AvalonTracker" x:Class="AvalonTracker.MainWindow"
        Title="MainWindow" Height="900" Width="1600" Loaded="Window_Loaded">
    <Window.Resources>
    </Window.Resources>
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <StackPanel Name="PlayerSelectionStackPanel">
            <local:PlayerSelectionView></local:PlayerSelectionView>
            <local:NewPlayerView></local:NewPlayerView>
            <Button Name="BtnStartMatch" Margin="50,50,50,50" FontSize="50" Content="START MATCH!"/>
        </StackPanel>
    </Grid>
</Window>

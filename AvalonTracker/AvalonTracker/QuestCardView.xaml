<UserControl x:Class="AvalonTracker.QuestCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AvalonTracker" 
             mc:Ignorable="d">
    <Grid>
        <Button Name="btnQuestCard" Command="{Binding TogglePassFailCommand}" Width="100" Height="150">
            <StackPanel>
                <Label Content="{Binding PassFail}" Width="100"/>
            </StackPanel>    
        </Button>
    </Grid>
</UserControl>
